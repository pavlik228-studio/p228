{
  "name": "ecs-old",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ecs-old/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ecs-old",
        "main": "packages/ecs-old/src/index.ts",
        "tsConfig": "packages/ecs-old/tsconfig.lib.json",
        "assets": [],
        "project": "packages/ecs-old/package.json",
        "compiler": "swc"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs ecs {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ecs-old/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/ecs-old"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/ecs-old"
      }
    }
  },
  "tags": []
}
