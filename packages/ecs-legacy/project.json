{
  "name": "ecs-legacy",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ecs-legacy/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ecs-legacy"
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/ecs-legacy"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/ecs-legacy"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ecs-legacy/**/*.ts"]
      }
    }
  },
  "tags": []
}
